<%= styled_flash %>

<ul>
  <% @links.each do |link| %>
    <li id="link-<%= link.id %>">
      <a href="<%= link.url %>" target="_blank">
        <%= link.title %>
      </a>
      <form action="/delete-link" method="post">
        <input type="hidden" name="id" value="<%= link.id %>">
        <input type="submit" value="Delete" />
      </form>
    </li>
  <% end %>
</ul>
